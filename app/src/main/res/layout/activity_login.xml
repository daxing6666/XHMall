<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    ripple:rv_type="rectangle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/layout_statusbar_default"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_weight="1"
        android:layout_height="0dp">
        <com.xinheng.ui.materialdesign.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            float:fletPaddingBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="number"
                android:hint="Phone" />
        </com.xinheng.ui.materialdesign.floatlabelededittext.FloatLabeledEditText>
        <com.xinheng.ui.materialdesign.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            float:fletPaddingBottom="5dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:hint="Password" />
        </com.xinheng.ui.materialdesign.floatlabelededittext.FloatLabeledEditText>

        <com.xinheng.frame.ui.view.rippleview.RippleView
            android:id="@+id/rippleview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            ripple:rv_type="rectangle"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_one"
                android:background="@drawable/background_button_rectangle"
                android:layout_height="match_parent" />
        </com.xinheng.frame.ui.view.rippleview.RippleView>

    </LinearLayout>
</LinearLayout>